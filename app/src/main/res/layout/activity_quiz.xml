<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".QuizActivity"
    android:padding="12dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tx_questionNumber"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="Question 1"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    
    
    <TextView
        android:id="@+id/tx_question"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="What is his name?"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        app:cardCornerRadius="12dp">
        <ImageView
            android:id="@+id/img_questionImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    
    <Button
        android:id="@+id/btn_optA"
        android:background="@drawable/btn_option_unselected"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:text="Option A"
        android:gravity="center"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btn_optB"
        android:textAllCaps="false"
        android:background="@drawable/btn_option_unselected"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:text="Option B"
        android:gravity="center"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        />
    <Button
        android:id="@+id/btn_optC"
        android:textAllCaps="false"
        android:background="@drawable/btn_option_unselected"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:text="Option C"
        android:gravity="center"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        />
    <Button
        android:id="@+id/btn_optD"
        android:textAllCaps="false"
        android:background="@drawable/btn_option_unselected"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:text="Option D"
        android:gravity="center"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        />
    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"

        android:layout_height="0dp"
        android:layout_weight="8"
        android:text="Submit"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/btn_option_selected"
        app:backgroundTint="@null"/>


</LinearLayout>